<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <h1>Create New Project</h1>
    <form action="/projects/<%= @project.id %>" method="post">
      <div class="form-group">
        <label for="project_name">Name</label>
        <input id="project_name" class="form-control" name="project[name]" type="text" value="<%= @project.name %>">
      </div>
      <div class="form-group">
        <label for="project_link">Link</label>
        <input id="project_link" class="form-control" name="project[link]" type="text" value="<%= @project.link %>">
      </div>
      <div class="form-group">
        <label for="project_description">Description</label>
        <textarea class="form-control" rows="3" id="project_description" name="project[description]" type="text" value="<%= @project.description %>"></textarea>
      </div>
      <button class="btn btn-primary">Create Project</button>
    </form>
  </div>
</div>